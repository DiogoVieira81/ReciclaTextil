<%- include('head') %>
<div class="container-fluid p-0">
    <img src="images/imagemLogin.jpg" alt="Imagem Login" class="login-image img-fluid">
</div>

<div class="container">
    <div class="row">
      <div class="col-lg-2"></div>
  
      <div class="col-lg-8 my-3">
        <h1 class="text-center">Criar conta ou Entrar</h1>
        <p class="text-center lead">Faça login ou crie uma conta</p>
        
       
        <div class="row">
  
          <div class="col-lg my-1">
            
            <h4>Faça o seu cadastro</h4>
            <p>Caso não possua conta, preencha o formulário abaixo:</p>
  
            <form class="form-cadastro" action="/admins/create" method="POST">
              <div class="form-group my-">
                <label>Email</label>
                <input type="email" class="form-control" name="email">
              </div>
              <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" name="password">
              </div>
              <button type="submit" class="btn btn-primary">Criar minha conta</button>
             <div class="social-buttons">
              <button class="btn-facebook">Criar com Facebook <img src="images/facebook.png" alt="Icone do facebook"></button>
              <button class="btn-google"><strong>Criar com  Google</strong> <img src="images/google.jpg" alt="Ícone do Google"></button>
             </div>
            </form>
            
          </div>
  
          <div class="col-lg my-1">
            <h4>Faça o seu login</h4>
  
            <p>Se você já tem conta, faça login <br>abaixo: 
                
            </p>
  
            <form class="form-login" action="/admins/login" method="POST">
              <div class="form-group my-6">
                <label>Email</label>
                <input type="email" class="form-control" name="email">
              </div>
              <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" name="password">
              </div>
              <button type="submit" class="btn btn-primary">Entrar</button>
              <button class="btn-facebook">Login com Facebook <img src="images/facebook.png" alt="Icone do facebook"></button>
        <button class="btn-google"><strong>Login com  Google</strong> <img src="images/google.jpg" alt="Ícone do Google"></button>
            </form>
  
            
          </div>
  
        </div>
  
      </div>

    </div>
</div>
<%- include('footer') %>
