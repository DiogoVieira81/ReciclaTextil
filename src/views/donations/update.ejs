    <form action="/donations/update/<%= donation._id %>" method="POST" id="donationsForm">
        <div class="form-row ">
            <div class="form-group col-md-6">
              <label for="id">Id</label>
              <input type="text" class="form-control" id="id" name="id" value="<%= donation.id %> "readonly >
            </div>
          </div>
      
          <div class="form-row">
            <div class="form-group col-md-6">
                <label for="name">Doador</label>
                <input type="text" class="form-control" id="name" value="<%= donation.donor.name %>" readonly >
                <input type="hidden" name="donor" value="<%= donation.donor._id %>">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="name">Entidade</label>
                <input type="text" class="form-control" id="name" value="<%= donation.entity.name %>" readonly >
                <input type="hidden" name="entity" value="<%= donation.entity._id %>">
            </div>
        </div>
      
      
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="pecas">Numero peças:</label>
          <input type="text" class="form-control" id="pecas" name="numberOfParts" value="<%= donation.numberOfParts %>"readonly  >
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="condicao">Condiçao:</label>
          <input type="text" class="form-control" id="condicao" name="condition" value="<%= donation.condition %>"readonly >
        </div>
      </div>
    <div class="form-row">
    <div class="form-group col-md-6">
      <label for="kg">Quantidade de Kg doados:</label>
      <input type="number" class="form-control" id="kg" value="<%= donation.kg %>" name="kg"  readonly  >
  </div>

  <div class="form-group col-md-6">
      <label for="points">Quantidade de Pontos Acumulados:</label>
      <input type="number" class="form-control" id="points" value="<%= donation.points %>" name="points"  readonly  >
  </div>
</div>

<div class="form-row">
  <div class="form-group col-md-12">
      <label for="state">Estado da doação:</label>
      <select class="form-control" id="state" name="state">
          <% if(donation.state === 'Registada') { %>
              <option value="Registada" selected>Registada</option>
              <option value="Processada">Processada</option>
          <% } else if(donation.state === 'Processada') { %>
              <option value="Processada" selected>Processada</option>
              <option value="Finalizada">Finalizada</option>
          <% } else if(donation.state === 'Finalizada') { %>
              <option value="Finalizada" selected>Finalizada</option>
          <% } %>
      </select>
  </div>
</div>
<button type="submit" id="submitButton" class="btn btn-primary">Concluido</button>
</form>
</div>
      
      
            

</form>

   
   
  
