    <form action="/donors/update/<%= donor._id %>" method="POST">
      <div class="form-row ">
        <div class="form-group col-md-6">
          <label for="name">Nome:</label>
          <input type="text" class="form-control" id="name" name="name" value="<%= donor.name %> "readonly required>
        </div>
      </div>
        <div class="form-group">
          <label for="email">Email:</label>
          <input type="email" class="form-control" id="email"  name="email"  value="<%= donor.email %>" readonly required>
        </div>
      <div class="form-group">
        <label for="phoneNumber">Telefone:</label>
        <input type="Telefone" class="form-control" id="phoneNumber" pattern="[0-9]{9}"  name="phoneNumber" value="<%= donor.phoneNumber %>" readonly required>
      </div>
      <div class="form-group">
        <label for="adress">Morada:</label>
        <input type="text" class="form-control" id="adress"   name="address" value="<%= donor.address %>" readonly required>
      </div>
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="city">Cidade</label>
          <input type="text" class="form-control" id="city" name="city" value="<%= donor.city %>"readonly required>
        </div>
      </div>
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="district">Distrito</label>
          <select  class="form-control" id="district"name="district" readonly required>
                    <option value="Aveiro" <%= (donor.district === "Aveiro") ? "selected" : "" %>>Aveiro</option>
                    <option value="Beja" <%= (donor.district === "Beja") ? "selected" : "" %>>Beja</option>
                    <option value="Braga" <%= (donor.district === "Braga") ? "selected" : "" %>>Braga</option>
                    <option value="Bragança" <%= (donor.district === "Bragança") ? "selected" : "" %>>Bragança</option>
                    <option value="Coimbra" <%= (donor.district === "Coimbra") ? "selected" : "" %>>Coimbra</option>
                    <option value="Évora" <%= (donor.district === "Évora") ? "selected" : "" %>>Évora</option>
                    <option value="Faro" <%= (donor.district === "Faro") ? "selected" : "" %>>Faro</option>
                    <option value="Guarda" <%= (donor.district === "Guarda") ? "selected" : "" %>>Guarda</option>
                    <option value="Leiria" <%= (donor.district === "Leiria") ? "selected" : "" %>>Leiria</option>
                    <option value="Lisboa" <%= (donor.district === "Lisboa") ? "selected" : "" %>>Lisboa</option>
                    <option value="Portalegre" <%= (donor.district === "Portalegre") ? "selected" : "" %>>Portalegre</option>
                    <option value="Santarém" <%= (donor.district === "Santarém") ? "selected" : "" %>>Santarém</option>
                    <option value="Setúbal" <%= (donor.district === "Setúbal") ? "selected" : "" %>>Setúbal</option>
                    <option value="Viana do Castelo" <%= (donor.district === "Viana do Castelo") ? "selected" : "" %>>Viana do Castelo</option>
                    <option value="Vila Real" <%= (donor.district === "Vila Real") ? "selected" : "" %>>Vila Real</option>
                    <option value="Viseu" <%= (donor.district === "Viseu") ? "selected" : "" %>>Viseu</option>
            
          </select>
        </div>
      </div>
    <div class="form-row">
  <div class="form-group col-md-6">
