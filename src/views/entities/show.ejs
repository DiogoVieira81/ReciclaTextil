    <h1>Lista de Entidades</h1>
  
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">Nome</th>
          <th scope="col">Email</th>
          <th scope="col">More Info/Edit</th>
           <th scope="col">Delete</th>
        </tr>
      </thead>
      <tbody>
        <tbody>
          <% entities.forEach(function(entity) { %>
          <tr>
            <td><%= entity.name %></td>
            <td><%= entity.email %></td>
            <td>
              <a href="/entities/update/<%= entity.id %>" class="btn btn-warning">Editar</a>
            </td>
            <td>
              <form action="/entities/delete/<%= entity.id %>" method="post">
                <button type="" class="btn btn-danger">Excluir</button>
              </form>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
       
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
